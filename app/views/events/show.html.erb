<div class="site-content-wrapper">
  <div class="event-details event-wrapper">
    <table class="table table-striped">
      <tbody>
      <tr class="default">
        <td>Title:</td>
        <td> <%= @event.title %></td>
      </tr>
      <tr class="table-white">
        <td>Location:</td>
        <td><%= @event.location %></td>
      </tr>
      <tr class="default">
        <td>Date & Time:</td>
        <td> <%= @event.date.strftime('%B %d, %Y %H:%M') %></td>
      </tr>
      <tr class="table-white">
        <td>Details:</td>
        <td><%= @event.description %></td>
      </tr>
      </tbody>
    </table>
  </div>
</div>