<div class="container">
  <ul class="search-result-wrapper">
  <% if @results.length > 0 %>
      <% @results.each do |artist| %>
         <%= link_to promotion_profile_path(id: artist.id) do%>
          <li class="clearfix artist-info">
            <div class="search-profile-img-wrapper">
               <%= image_tag(artist.profile_image) %>
            </div>
            <div class="artist-info-wrapper">
              <div class="col-lg-12">
                <div class="col-sm-9">
                  <div class="basic-info">
                    <h4><%= artist.full_name %></h4>
                    <p><small><%= artist.track %></small></p>
                    <p><%= raw truncate(artist.bio, :length => 100, :omission => '...') %></p>
                  </div>
                </div>
                <div class="col-sm-3 address-info">
                  <i class="fa fa-map-marker"> </i>
                  <%= artist.short_address %>
                </div>
              </div>
            </div>
          </li>
         <% end %>
      <% end %>
  <% else %>
    <div class="no-content">
      <div class="alert alert-warning fade in">
        <h3><strong>"<%= @searching_params %>"</strong> is not found</h3>
      </div>
    </div>
  <% end %>
  </ul>
</div>